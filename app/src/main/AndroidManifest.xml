<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.happeyhunter.thermopi">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_thermopi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_thermopi_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Design">
        <activity android:name=".activities.MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TargetTemperatureControl"
            android:label="@string/title_activity_target_temperature_control" />
        <activity
            android:name=".activities.ScheduleManager"
            android:label="@string/title_activity_schedule_manager" />
        <activity
            android:name=".activities.HolidayManager"
            android:label="@string/title_activity_holiday_manager" />
        <activity android:name=".activities.AddHoliday" />
        <activity
            android:name=".activities.Settings"
            android:label="@string/title_activity_settings" />
    </application>

</manifest>